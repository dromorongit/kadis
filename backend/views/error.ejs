<div class="error-container">
    <div class="text-center">
        <div class="display-1"><%= error.status || '500' %></div>
        <h1 class="mb-4"><%= title || 'Something went wrong' %></h1>
        <p class="lead mb-4"><%= message || 'An unexpected error occurred.' %></p>

        <div class="mb-4">
            <a href="/admin" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-home me-2"></i>Go to Dashboard
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-arrow-left me-2"></i>Go Back
            </a>
        </div>

        <% if (process.env.NODE_ENV === 'development' && error && error.stack) { %>
            <details class="text-start">
                <summary class="btn btn-outline-secondary">Technical Details</summary>
                <pre class="mt-3 p-3 bg-light rounded"><code><%= error.stack %></code></pre>
            </details>
        <% } %>
    </div>
</div>