<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.reload()">
                <i class="fas fa-sync-alt me-1"></i>Refresh
            </button>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Total Products</h6>
                        <h3 class="mb-0 text-primary"><%= stats.totalProducts %></h3>
                    </div>
                    <div class="stats-icon bg-primary">
                        <i class="fas fa-box fa-2x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Featured Products</h6>
                        <h3 class="mb-0 text-success"><%= stats.featuredProducts %></h3>
                    </div>
                    <div class="stats-icon bg-success">
                        <i class="fas fa-star fa-2x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Men's Products</h6>
                        <h3 class="mb-0 text-info"><%= stats.menProducts %></h3>
                    </div>
                    <div class="stats-icon bg-info">
                        <i class="fas fa-male fa-2x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Women's Products</h6>
                        <h3 class="mb-0 text-warning"><%= stats.womenProducts %></h3>
                    </div>
                    <div class="stats-icon bg-warning">
                        <i class="fas fa-female fa-2x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Products -->
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Recent Products</h5>
            </div>
            <div class="card-body">
                <% if (recentProducts.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentProducts.forEach(product => { %>
                                    <tr>
                                        <td><%= product.title %></td>
                                        <td><span class="badge bg-<%= product.category === 'Men' ? 'info' : 'warning' %>"><%= product.category %></span></td>
                                        <td>â‚µ<%= product.price %></td>
                                        <td><%= new Date(product.createdAt).toLocaleDateString() %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted mb-0">No products found.</p>
                <% } %>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/products/new" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Product
                    </a>
                    <a href="/products" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>View All Products
                    </a>
                    <button class="btn btn-outline-secondary" onclick="location.reload()">
                        <i class="fas fa-sync-alt me-2"></i>Refresh Stats
                    </button>
                </div>
            </div>
        </div>

        <% if (stats.outOfStock > 0) { %>
            <div class="card mt-3 border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-triangle text-warning fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">Out of Stock Alert</h6>
                            <p class="mb-0 text-muted"><%= stats.outOfStock %> products are out of stock</p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
.stats-card {
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
    transition: transform 0.3s ease;
}

.stats-card:hover {
    transform: translateY(-5px);
}

.stats-icon {
    width: 60px;
    height: 60px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card {
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
}

.card-header {
    background: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
    border-radius: 10px 10px 0 0 !important;
    padding: 1rem 1.25rem;
}

.table th {
    border-top: none;
    font-weight: 600;
    color: #495057;
}

.btn {
    border-radius: 8px;
    font-weight: 500;
}
</style>